<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

   <com.hunterrobbert.layoutcoordinatorexample.CollapsibleHeaderLayout
       android:id="@+id/collapsible_header_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:headerImage="@drawable/sun"
       app:titleText="Mount Kilimanjaro"
       app:titleTextColor="@android:color/white"
       app:subTitleText="Africa">

       <ImageView
           android:id="@+id/overflow"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_more_vert_white_24dp"/>

       <FrameLayout
           android:id="@+id/fab"
           android:layout_width="52dp"
           android:layout_height="52dp"
           android:background="@drawable/fab_circle_lollipop"/>

   </com.hunterrobbert.layoutcoordinatorexample.CollapsibleHeaderLayout>





</RelativeLayout>
